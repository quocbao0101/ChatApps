<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/item_image_URL"
        android:src="@mipmap/icon_avatar_foreground"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/item_username"
        android:layout_toRightOf="@+id/item_image_URL"
        android:layout_toEndOf="@+id/item_image_URL"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#05df29"
        android:id="@+id/status_onl"
        android:src="@mipmap/ic_launcher_foreground"
        android:layout_below="@id/item_username"
        android:visibility="gone"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="-16dp"
        android:layout_toRightOf="@id/item_image_URL"
        android:layout_toEndOf="@id/item_image_URL"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#bfbfbf"
        android:id="@+id/status_off"
        android:src="@mipmap/ic_launcher_foreground"
        android:layout_below="@id/item_username"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="-16dp"
        android:layout_toRightOf="@id/item_image_URL"
        android:layout_toEndOf="@id/item_image_URL"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_username"
        android:layout_toRightOf="@id/item_image_URL"
        android:id="@+id/lastMessage"
        android:textColor="@color/maune"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:textSize="15dp"
        android:text=""/>
</RelativeLayout>